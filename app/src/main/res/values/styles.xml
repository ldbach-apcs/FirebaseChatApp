<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="unreadBadge">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/unread_padding_vertical</item>
        <item name="android:paddingTop">@dimen/unread_padding_vertical</item>
        <item name="android:background">@drawable/unread_badge</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/textSmaller</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
