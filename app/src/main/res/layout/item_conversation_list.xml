<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="conversation"
            type="com.example.cpu02351_local.firebasechatapp.ChatCore.model.Conversation"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical">

        <TextView
            android:text="@{conversation.id}"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:text="@{conversation.createdTime}"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:text="@{Integer.toString(conversation.participantIds.size)}"
            android:layout_width="match_parent"
            android:layout_height="24dp" />


    </LinearLayout>
</layout>