<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.example.cpu02351_local.firebasechatapp.mainscreen.conversationlist.viewmodel.DisplayViewModel"/>
        <variable
            name="conversation"
            type="com.example.cpu02351_local.firebasechatapp.model.Conversation"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:layout_height="72dp"
        android:orientation="vertical">

        <TextView
            android:text="@{conversation.id}"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:text="@{conversation.lastMessage.display()}"
            android:layout_width="match_parent"
            android:layout_height="24dp" />


    </LinearLayout>
</layout>