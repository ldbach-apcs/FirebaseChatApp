<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.cpu02351_local.firebasechatapp.mainscreen.conversationlist.viewmodel.DisplayViewModel"/>
        <variable
            name="conversation"
            type="com.example.cpu02351_local.firebasechatapp.model.Conversation"/>
    </data>

    <RelativeLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:smallImageUrl="@{viewModel.getAvaUrl(conversation.lastMessage.byUser)}"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_sample_ava"
            android:id="@+id/image"
            android:layout_width="@dimen/avaThumbnail"
            android:layout_height="@dimen/avaThumbnail" />

        <LinearLayout
            android:id="@+id/topGroup"
            android:layout_toEndOf="@+id/image"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@{viewModel.conversationName}"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/textPrimary"
                android:gravity="bottom"
                android:textSize="@dimen/textLarge"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@{conversation.time}"
                android:textColor="@color/textTime"
                android:gravity="bottom"
                android:textSize="@dimen/textSmall"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/topGroup"
            android:layout_toEndOf="@+id/image"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="@{viewModel.getDisplaySender()? View.VISIBLE : View.GONE}"
                android:text="@{viewModel.getSenderName(conversation.lastMessage.byUser)}"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginEnd="4dp"
                android:textColor="@color/textSecondary"
                android:gravity="top"
                android:textSize="@dimen/textStandard"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@{conversation.lastMessage.display()}"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/textSecondary"
                android:gravity="top"
                android:textSize="@dimen/textStandard"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</layout>