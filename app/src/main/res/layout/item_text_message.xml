<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="message"
            type="com.example.cpu02351_local.firebasechatapp.model.Message"/>
        <variable
            name="avaViewModel"
            type="com.example.cpu02351_local.firebasechatapp.messagelist.viewmodel.AvatarViewModel"/>
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="end"
            app:smallImageUrl="@{avaViewModel.avaUrl}"
            android:visibility="@{avaViewModel.showAva ? View.VISIBLE : View.GONE}"
            android:src="@drawable/ic_sample_ava"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:layout_marginEnd="54dp"
            android:layout_marginStart="32dp"
            android:padding="16dp"
            android:layout_gravity="end"
            android:background="@color/chatMe"
            android:text="@{message.content}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>
</layout>
