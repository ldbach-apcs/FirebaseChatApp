<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="message"
            type="com.example.cpu02351_local.firebasechatapp.model.Message"/>

        <variable
            name="avaViewModel"
            type="com.example.cpu02351_local.firebasechatapp.messagelist.viewmodel.AvatarViewModel"/>
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="start"
            app:smallImageUrl="@{avaViewModel.avaUrl}"
            android:visibility="@{avaViewModel.showAva ? View.VISIBLE : View.GONE}"
            android:src="@drawable/ic_sample_ava"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_marginEnd="@dimen/chatMargin"
            android:layout_marginStart="@dimen/chatMargin"
            android:padding="8dp"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="@color/chatOther"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="14sp"
                android:visibility="@{avaViewModel.showAva ? View.VISIBLE : View.GONE}"
                android:textColor="@color/textOtherName"
                android:text="@{message.byUser}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="@{message.content}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:visibility="@{avaViewModel.showTime ? View.VISIBLE : View.GONE}"
                android:textColor="@color/textTime"
                android:text="@{message.getTime()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>
</layout>
