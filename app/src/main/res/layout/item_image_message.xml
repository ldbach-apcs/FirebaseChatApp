<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.cpu02351_local.firebasechatapp.messagelist.viewmodel.MessageImageMineItemViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:padding="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/marginImageMessageStartRight"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.cpu02351_local.firebasechatapp.utils.RoundedImageView
            app:imageWithSize="@{viewModel.attributeBundle}"
            android:onClick="@{() -> viewModel.imageClicked()}"
            android:id="@+id/bitmap_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>


    </android.support.constraint.ConstraintLayout>

</layout>
