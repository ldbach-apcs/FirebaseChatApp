<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.cpu02351_local.firebasechatapp.messagelist.viewmodel.MessageImageMineItemViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/marginMessageStartRight"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.cpu02351_local.firebasechatapp.utils.RoundedImageView
            android:onClick="@{() -> viewModel.imageClicked()}"
            android:src="@{viewModel.hasBitmap() ? viewModel.getImageSrc() : @drawable/ic_default_ava}"
            android:id="@+id/bitmap_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>


    </android.support.constraint.ConstraintLayout>

</layout>
